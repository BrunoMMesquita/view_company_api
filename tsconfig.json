{
   "compilerOptions": {
      "lib": [
         "es6"
      ],
      "target": "es2017",
      "module": "commonjs",
      "moduleResolution": "node",
      "outDir": "./build",
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "typeRoots": [
         "./node_modules/@types",
         "./src/@types"
       ], 
      "sourceMap": true,
      "baseUrl": ".",
      "paths": {
         "@controller/*": [
            "./src/controller/*"
         ],
         "@entity/*": [
            "./src/entity/*"
         ]
      }
   }
}